#!/bin/bash

set -e

cd "$(dirname "$0")"

format_rdf() {
  rapper -i turtle -o turtle -q $1 >temp.ttl
  mv -f temp.ttl $1
}

format_rdf models.shaclmate.ttl

../../../../shaclmate/packages/cli/cli.sh generate $PWD/models.shaclmate.ttl >generated.ts

npm exec biome -- check --write --unsafe generated.ts
